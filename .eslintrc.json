{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-await-in-loop": "off",
    "no-promise-executor-return": "off",
    "prefer-destructuring": ["error", {"object": false, "array": false}]
  }
}
